{
  "name": "node-ray",
  "version": "1.0.0",
  "description": "Debug NodeJS with Ray to fix problems faster",
  "license": "MIT",
  "author": "Patrick Organ <patrick@permafrost.dev>",
  "homepage": "https://github.com/permafrost-dev/node-ray",
  "repository": {
    "type": "git",
    "url": "https://github.com/permafrost-dev/node-ray.git"
  },
  "bugs": {
    "url": "https://github.com/permafrost-dev/node-ray/issues"
  },
  "main": "./dist/index.cjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "test": "./node_modules/.bin/jest tests --verbose",
    "test:coverage": "./node_modules/.bin/jest tests --coverage",
    "fmt": "./node_modules/.bin/prettier --config .prettierrc --write $(find src/ tests/ -printf '%p ' -type f -regex '.*\\.([tj]s|json)$')",
    "lint": "./node_modules/.bin/eslint --ext ts,js src/",
    "lint:fix": "./node_modules/.bin/eslint --ext ts,js --fix src/",
    "fix": "npm run fmt && npm run lint:fix",
    "build": "rollup --config",
    "build:standalone": "rollup --config rollup.standalone-config.js",
    "build:all": "npm run build && npm run build:standalone",
    "preversion": "npm run build:all"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/md5": "^2.2.1",
    "@types/node": "^14.14.20",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-version-injector": "^1.3.0",
    "ts-jest": "^26.4.4",
    "ts-mixer": "^5.4.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "find-up": "^5.0.0",
    "md5": "^2.3.0",
    "pretty-format": "^26.6.2",
    "random-int": "^2.0.1",
    "stacktrace-js": "^2.0.2",
    "uuid": "^8.3.2",
    "xml-formatter": "^2.4.0"
  }
}
